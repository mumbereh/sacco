<% content_for :title, "Loan repayments" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Loan repayments</h1>
    <%= link_to "New loan repayment", new_loan_repayment_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="loan_repayments" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @loan_repayments.any? %>
      <% @loan_repayments.each do |loan_repayment| %>
        <div class="flex justify-between items-center">
          <%= render loan_repayment %>
          <div class="space-x-2">
            <%= link_to "Show", loan_repayment, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_loan_repayment_path(loan_repayment), class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <div class="inline-block">
              <%= button_to "Destroy", loan_repayment, method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No loan repayments found.</p>
    <% end %>
  </div>
</div>
