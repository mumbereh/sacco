<h1 class="header">Member Details</h1>

<div class="card mb-4">
  <div class="card-body">
    <div class="show_container">
      
      <!-- Full Name -->
      <p>
        <strong>Full Name:</strong>
        <%= "#{@member.given_name} #{@member.other_name} #{@member.surname}" %>
      </p>

      <!-- Membership Type -->
      <p>
        <strong>Membership Type:</strong>
        <%= @member.membership_type %>
      </p>

      <!-- Date of Birth -->
      <p>
        <strong>Date of Birth:</strong>
        <%= @member.date_of_birth.strftime("%B %d, %Y") if @member.date_of_birth %>
      </p>

      <!-- Gender -->
      <p>
        <strong>Gender:</strong>
        <%= @member.gender.capitalize %>
      </p>

      <!-- Contact Information -->
      <div class="mt-3">
        <p>
          <strong>Phone:</strong>
          <%= @member.phone %>
        </p>

        <p>
          <strong>Marital Status:</strong>
          <%= @member.marital_status.capitalize %>
        </p>

        <p>
          <strong>Physical Address:</strong>
          <%= @member.physical_address %>
        </p>
      </div>

      <!-- Identification Details -->
      <div class="mt-3">
        <p>
          <strong>Identification:</strong>
          <%= "#{@member.identification_type}: #{@member.id_number}" %>
        </p>
      </div>

      <!-- Parents Information -->
      <div class="mt-3">
        <p>
          <strong>Mother's Name:</strong>
          <%= @member.mother_name %>
        </p>

        <p>
          <strong>Father's Name:</strong>
          <%= @member.father_name %>
        </p>
      </div>

      <!-- Next of Kin Information -->
      <h3 class="mt-4">Next of Kin</h3>
      <div class="mt-3">
        <p>
          <strong>Kin's Name:</strong>
          <%= "#{@member.kin_given_name} #{@member.kin_other_name} #{@member.kin_surname}" %>
        </p>

        <p>
          <strong>Kin's Date of Birth:</strong>
          <%= @member.kin_date_of_birth.strftime("%B %d, %Y") if @member.kin_date_of_birth %>
        </p>

        <p>
          <strong>Kin's Gender:</strong>
          <%= @member.kin_gender.capitalize %>
        </p>

        <p>
          <strong>Kin's Relationship:</strong>
          <%= @member.kin_relationship %>
        </p>

        <p>
          <strong>Kin's Phone:</strong>
          <%= @member.kin_phone %>
        </p>

        <p>
          <strong>Kin's Address:</strong>
          <%= @member.kin_address %>
        </p>
      </div>

      <!-- Declaration Information -->
      <h3 class="mt-4">Declaration</h3>
      <div class="mt-3">
        <p>
          <strong>Declaration Name:</strong>
          <%= @member.declaration_name %>
        </p>

        <p>
          <strong>Declaration Date:</strong>
          <%= @member.declaration_date.strftime("%B %d, %Y") if @member.declaration_date %>
        </p>
      </div>

    </div>
  </div>

  <!-- Actions -->
  <div class="actions mt-4">
    <%= link_to 'Edit', edit_member_path(@member), class: 'btn btn-warning mr-2' %>
    <%= link_to 'Back', members_path, class: 'btn btn-secondary' %>
  </div>
</div>
