<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>
      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2 class="details">Personal Details</h2>

  <div>
    <%= form.label :membership_type, "Membership Type", style: "display: block" %>
    <%= form.select :membership_type, [["Share", "Share"], ["Loan", "Loan"]] %>
  </div>

  <div>
    <%= form.label :surname, "Surname", style: "display: block" %>
    <%= form.text_field :surname %>
  </div>

  <div>
    <%= form.label :given_name, "Given Name", style: "display: block" %>
    <%= form.text_field :given_name %>
  </div>

  <div>
    <%= form.label :other_name, "Other Name", style: "display: block" %>
    <%= form.text_field :other_name %>
  </div>

  <div>
    <%= form.label :date_of_birth, "Date of Birth", style: "display: block" %>
    <%= form.date_field :date_of_birth %>
  </div>

  <div>
    <%= form.label :gender, "Gender", style: "display: block" %>
    <%= form.select :gender, [["Male", "male"], ["Female", "female"], ["Others", "others"]] %>
  </div>

  <div>
    <%= form.label :marital_status, "Marital Status", style: "display: block" %>
    <%= form.select :marital_status, [["Single", "single"], ["Married", "married"], ["Widow", "widow"], ["Widowed", "widowed"], ["Others", "others"]] %>
  </div>

  <h2 class="details">Contact Details</h2>

  <div>
    <%= form.label :physical_address, "Physical Address", style: "display: block" %>
    <%= form.text_field :physical_address %>
  </div>

  <div>
    <%= form.label :phone, "Phone Number", style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.label :other_number, "Other Number", style: "display: block" %>
    <%= form.text_field :other_number %>
  </div>

  <div>
    <%= form.label :identification_type, "Identification Type", style: "display: block" %>
    <%= form.select :identification_type, [["National Id", "National Id"], ["Driver’s License", "Driver’s License"], ["Passport", "Passport"]] %>
  </div>

  <div>
    <%= form.label :id_number, "ID Number or NIN", style: "display: block" %>
    <%= form.text_field :id_number %>
  </div>

  <h2 class="details">Parents Details</h2>

  <div>
    <%= form.label :mother_name, "Mother's Name", style: "display: block" %>
    <%= form.text_field :mother_name %>
  </div>

  <div>
    <%= form.label :mother_nationality, "Mother's Nationality", style: "display: block" %>
    <%= form.select :mother_nationality, [["Uganda", "Uganda"], ["Others", "Others"]] %>
  </div>

  <div>
    <%= form.label :father_name, "Father's Name", style: "display: block" %>
    <%= form.text_field :father_name %>
  </div>

  <div>
    <%= form.label :father_nationality, "Father's Nationality", style: "display: block" %>
    <%= form.select :father_nationality, [["Uganda", "Uganda"], ["Others", "Others"]] %>
  </div>

  <h2 class="details">Next of Kin Details</h2>

  <div>
    <%= form.label :kin_surname, "Next of Kin Surname", style: "display: block" %>
    <%= form.text_field :kin_surname %>
  </div>

  <div>
    <%= form.label :kin_given_name, "Next of Kin Given Name", style: "display: block" %>
    <%= form.text_field :kin_given_name %>
  </div>

  <div>
    <%= form.label :kin_other_name, "Next of Kin Other Name", style: "display: block" %>
    <%= form.text_field :kin_other_name %>
  </div>

  <div>
    <%= form.label :kin_date_of_birth, "Next of Kin Date of Birth", style: "display: block" %>
    <%= form.date_field :kin_date_of_birth %>
  </div>

  <div>
    <%= form.label :kin_gender, "Next of Kin Gender", style: "display: block" %>
    <%= form.select :kin_gender, [["Male", "male"], ["Female", "female"], ["Others", "others"]] %>
  </div>

  <div>
    <%= form.label :kin_relationship, "Relationship to Member", style: "display: block" %>
    <%= form.text_field :kin_relationship %>
  </div>

  <div>
    <%= form.label :kin_phone, "Next of Kin Phone", style: "display: block" %>
    <%= form.text_field :kin_phone %>
  </div>

  <div>
    <%= form.label :kin_address, "Next of Kin Address", style: "display: block" %>
    <%= form.text_field :kin_address %>
  </div>

  <h2 class="details">Declaration</h2>

  <p>I hereby declare that the information provided is true and correct to the best of my knowledge.</p>

  <div>
    <%= form.label :declaration_name, "Name", style: "display: block" %>
    <%= form.text_field :declaration_name %>
  </div>

  <div>
    <%= form.label :signature, "Signature", style: "display: block" %>
    <%= form.text_field :signature %>
  </div>

  <div>
    <%= form.label :declaration_date, "Date", style: "display: block" %>
    <%= form.date_field :declaration_date %>
  </div>

  <div>
    <%= form.submit "Submit Membership Form" %>
  </div>
<% end %>
