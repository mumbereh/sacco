<%= form_with(model: member, local: true, html: { multipart: true }) do |form| %>

  <% if member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>
      <ul>
        <% member.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2 class="details">Personal Details</h2>

  <div>
    <%= form.label :membership_type, "Membership Type" %>
    <%= form.select :membership_type, [["Share", "Share"], ["Loan", "Loan"]] %>
  </div>

  <div>
    <%= form.label :surname, "Surname" %>
    <%= form.text_field :surname %>
  </div>

  <div>
    <%= form.label :given_name, "Given Name" %>
    <%= form.text_field :given_name %>
  </div>

  <div>
    <%= form.label :other_name, "Other Name" %>
    <%= form.text_field :other_name %>
  </div>

  <div>
    <%= form.label :date_of_birth, "Date of Birth" %>
    <%= form.date_field :date_of_birth %>
  </div>

  <div>
    <%= form.label :gender, "Gender" %>
    <%= form.select :gender, [["Male", "male"], ["Female", "female"], ["Others", "others"]] %>
  </div>

  <div>
    <%= form.label :marital_status, "Marital Status" %>
    <%= form.select :marital_status, [["Single", "single"], ["Married", "married"], ["Widow", "widow"], ["Widowed", "widowed"], ["Others", "others"]] %>
  </div>

  <div>
    <%= form.label :physical_address, "Physical Address" %>
    <%= form.text_field :physical_address %>
  </div>

  <div>
    <%= form.label :phone, "Phone Number" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.label :passport_photo, "Passport Photo (Required)" %>
    <%= form.file_field :passport_photo %>
  </div>

  <h2 class="details">Identification Details</h2>

  <div>
    <%= form.label :identification_type, "Identification Type" %>
    <%= form.select :identification_type, [["National Id", "National Id"], ["Driver’s License", "Driver’s License"], ["Passport", "Passport"]] %>
  </div>

  <div>
    <%= form.label :id_number, "ID Number or NIN" %>
    <%= form.text_field :id_number %>
  </div>

  <div>
    <%= form.label :id_document_photo, "Upload Selected ID Document (Required)" %>
    <%= form.file_field :id_document_photo %>
  </div>

  <h2 class="details">Parents Details</h2>

  <div>
    <%= form.label :mother_name, "Mother's Name" %>
    <%= form.text_field :mother_name %>
  </div>

  <div>
    <%= form.label :mother_nationality, "Mother's Nationality" %>
    <%= form.select :mother_nationality, [["Uganda", "Uganda"], ["Others", "Others"]] %>
  </div>

  <div>
    <%= form.label :father_name, "Father's Name" %>
    <%= form.text_field :father_name %>
  </div>

  <div>
    <%= form.label :father_nationality, "Father's Nationality" %>
    <%= form.select :father_nationality, [["Uganda", "Uganda"], ["Others", "Others"]] %>
  </div>

  <h2 class="details">Next of Kin Details</h2>

  <div>
    <%= form.label :kin_surname, "Next of Kin Surname" %>
    <%= form.text_field :kin_surname %>
  </div>

  <div>
    <%= form.label :kin_given_name, "Next of Kin Given Name" %>
    <%= form.text_field :kin_given_name %>
  </div>

  <div>
    <%= form.label :kin_other_name, "Next of Kin Other Name" %>
    <%= form.text_field :kin_other_name %>
  </div>

  <div>
    <%= form.label :kin_date_of_birth, "Next of Kin Date of Birth" %>
    <%= form.date_field :kin_date_of_birth %>
  </div>

  <div>
    <%= form.label :kin_gender, "Next of Kin Gender" %>
    <%= form.select :kin_gender, [["Male", "male"], ["Female", "female"], ["Others", "others"]] %>
  </div>

  <div>
    <%= form.label :kin_relationship, "Relationship to Member" %>
    <%= form.text_field :kin_relationship %>
  </div>

  <div>
    <%= form.label :kin_phone, "Next of Kin Phone" %>
    <%= form.text_field :kin_phone %>
  </div>

  <div>
    <%= form.label :kin_address, "Next of Kin Address" %>
    <%= form.text_field :kin_address %>
  </div>

  <h2 class="details">Declaration</h2>

  <p>I hereby declare that the information provided is true and correct to the best of my knowledge.</p>

  <div>
    <%= form.label :declaration_name, "Name" %>
    <%= form.text_field :declaration_name %>
  </div>

  <div>
    <%= form.label :signature, "Signature" %>
    <%= form.text_field :signature %>
  </div>

  <div>
    <%= form.label :declaration_date, "Date" %>
    <%= form.date_field :declaration_date %>
  </div>

  <div>
    <%= form.submit "Submit Membership Form" %>
  </div>

<% end %>
